<h1>Tasks</h1>

<% @tasks.each do |task| %>
  <div>
    <input type="checkbox" id="scales" name="scales"
           checked>
    <label for="task"><%= link_to task.title,  task_path(task) %></label>
    <%= link_to 'delete', destroy_path(task), method: :delete %>
  </div>
<% end %>

<div>
<%= link_to 'create a task', tasks_new_path %>
</div>
